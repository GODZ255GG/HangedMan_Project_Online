<Window x:Class="HangedMan_Client.Views.QuestionMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangedMan_Client.Views"
        mc:Ignorable="d"
        Title="QuestionMessage" 
                WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="AccionButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="20" Height="800" Width="1200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="White" CornerRadius="12" Height="225" Width="406" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="12,12,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5B4DF7" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="HANGEDMAN" Foreground="White" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20">
                        <Image Source="/Resources/iconWarning.png" Width="70" Height="70" Margin="0,0,20,0"/>
                        <TextBlock x:Name="txtbMessage" Text="You lost the game!" FontSize="18" VerticalAlignment="Center" Foreground="#333333" Height="auto" Width="auto"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="btnCancel" Content="Cancelar" Width="120" Height="36"  Background="#5B4DF7" Foreground="White" FontWeight="Bold" FontSize="15" BorderThickness="0" Cursor="Hand" Style="{StaticResource AccionButtonStyle}" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                        <Button x:Name="btnAcept" Content="Aceptar" Width="120" Height="36"  Background="#5B4DF7" Foreground="White" FontWeight="Bold" FontSize="15" BorderThickness="0" Cursor="Hand" Style="{StaticResource AccionButtonStyle}" Click="BtnAcept_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
