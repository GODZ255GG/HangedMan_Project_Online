<Window x:Class="HangedMan_Client.Views.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight" AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner" Background="Transparent">

    <Window.Resources>
        <Style x:Key="AccionButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Width="1200" Height="800">
        <Border.Background>
            <SolidColorBrush Color="#FF4C4C4C" Opacity="0.3"/>
        </Border.Background>
        <Border CornerRadius="10" Background="White" Padding="20" Width="448" Height="303"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock Text="Settings" FontWeight="Bold" FontSize="20" Foreground="#1E40AF"/>
                    <Button x:Name="btnClose" Content="✕" Width="30" Height="30" HorizontalAlignment="Right" Margin="300,0,0,0"
                    Click="BtnClose_Click" Background="Transparent" BorderBrush="{x:Null}" FontSize="16"/>
                </StackPanel>
                <StackPanel Margin="0,10,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Resources/iconPlayer.png" Width="70" Height="70" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="lblPlayerNickname" Content="Player1" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center"/>
                </StackPanel>
                <Separator Margin="0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                    <Button x:Name="btnViewProfile" Content="View Full Profile"  Width="205" Height="40"  Background="#1E40AF" Foreground="White" BorderBrush="{x:Null}" Style="{StaticResource AccionButtonStyle}" FontWeight="SemiBold" FontSize="16" Click="BtnViewProfile_Click"/>
                    <Button x:Name="btnViewMatchHistory" Content="View Match History" Width="205" Height="40" Background="#16A34A" Foreground="White" BorderBrush="{x:Null}" Style="{StaticResource AccionButtonStyle}" FontWeight="SemiBold" FontSize="16" Click="BtnViewMatchHistory_Click"/>
                </StackPanel>
                <Button x:Name="btnLogout" Content="Logout" Height="40" Margin="0,10,0,0" Background="#DDDDDD" Foreground="Black" BorderBrush="{x:Null}" Click="BtnLogout_Click" Style="{StaticResource AccionButtonStyle}" FontWeight="Bold" FontSize="18"/>
            </StackPanel>
        </Border>
    </Border>
</Window>
